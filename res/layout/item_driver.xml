<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    >
    
    <ImageView
        android:id="@+id/driverPort"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/port1"
        android:background="@android:color/transparent" 
        />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
        	<LinearLayout
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="vertical">

        	    <TextView
        	        android:id="@+id/driverName"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:textAppearance="?android:attr/textAppearanceMedium"
        	        android:textColor="@color/dark_gray"
        	        android:textStyle="bold" 
        	        android:textSize="@dimen/textSizeNormal"
        	        android:text="董师傅"
        	        >
        	    </TextView>

        	    <TextView
        	        android:id="@+id/driverLocation"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:textAppearance="?android:attr/textAppearanceMedium"
        	        android:textColor="@color/dark_gray"
        	        android:textStyle="bold" 
        	        android:textSize="@dimen/textSizeNormal"
        	        android:text="距离：2公里"
        	        >
        	    </TextView>
        	</LinearLayout>
        	
        	<Button 
        	    android:id="@+id/callDriver"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:paddingLeft="15dp"
        	    android:paddingRight="15dp"
        	    android:paddingTop="2dp"
        	    android:paddingBottom="2dp"
        	    android:drawablePadding="2dp"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:drawableLeft="@drawable/ic_phone"
        	    android:background="@drawable/btn_call"
        	    android:text="空闲"/>
        </RelativeLayout>
        
		
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtTotalCounts" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textSizeLittle"
                android:ems="5"
                android:text="代驾:55次"
                />
            <TextView
                android:id="@+id/txtTotalYears" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textSizeLittle"
                android:ems="5"
                android:text="驾龄:10年"
                />
            <TextView 
                android:id="@+id/txtHomeTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textSizeLittle"
                android:text="籍贯：河北"
                />
        </LinearLayout>
    </LinearLayout>
	
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/tip_arrow"
        />
	
</LinearLayout>
