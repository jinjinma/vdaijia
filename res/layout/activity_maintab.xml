<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </TabWidget>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        >
    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        ></FrameLayout>
    <RadioGroup
        android:id="@+id/tabGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@drawable/maintab_toolbar_bg"
        >
        <RadioButton
            android:id="@+id/tab1"
            style="@style/bottom_navi_btn"
            android:drawableTop="@drawable/tab_thumb"
            android:text="@string/tab_find_driver"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/tab2"
            style="@style/bottom_navi_btn"
            android:drawableTop="@drawable/tab_thumb"
            android:text="@string/tab_invite_friends"
            />
        <RadioButton
            android:id="@+id/tab3"
            style="@style/bottom_navi_btn"
            android:drawableTop="@drawable/tab_thumb"
            android:text="@string/tab_my_report"
            />
        <RadioButton
            android:id="@+id/tab4"
            style="@style/bottom_navi_btn"
            android:drawableTop="@drawable/tab_thumb"
            android:text="@string/tab_more"
            />
    </RadioGroup>
	</LinearLayout>
</TabHost>
