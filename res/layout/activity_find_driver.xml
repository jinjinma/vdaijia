<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindDriverActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_blue_bg"
        >
        <Button 
            android:id="@+id/price_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_blue"
            android:layout_marginLeft="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeNormal"
            android:text="价格表"
            />
    <RadioGroup
        android:id="@+id/typeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <RadioButton 
            android:id="@+id/typeList"
            android:layout_width="89.0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/group_left_bg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSizeNormal"
            android:text="@string/typeList"
            />
        <RadioButton 
            android:id="@+id/typeMap"
            android:layout_width="89.0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSizeNormal"
            android:background="@drawable/group_right_bg"
            android:text="@string/typeMap"
            android:checked="true"
            />
    </RadioGroup>
    
    	<Button 
            android:id="@+id/discount_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/btn_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeNormal"
            android:text="优惠券"
            />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
    <com.tty.vdaijia.view.RefreshableListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></com.tty.vdaijia.view.RefreshableListView>
    <com.baidu.mapapi.map.MapView 
        android:id="@+id/bmapView"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:clickable="true"     
	/>
	</FrameLayout>    
</LinearLayout>
